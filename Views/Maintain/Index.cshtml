@model u22710362_HW03.Models.HomeViewModel

@{
    ViewBag.Title = "Maintain - Bike Store Management";
}

<style>
    .section-container {
        display: flex;
        gap: 20px;
        margin-bottom: 20px;
    }

    .section-box {
        flex: 1;
        border: 2px solid #ccc;
        padding: 15px;
        background-color: #f9f9f9;
    }

        .section-box h4 {
            margin-top: 0;
            margin-bottom: 15px;
            padding-bottom: 10px;
            border-bottom: 2px solid #333;
        }

    .form-row {
        display: flex;
        gap: 10px;
        margin-bottom: 10px;
        align-items: center;
    }

        .form-row label {
            flex: 0 0 100px;
            margin: 0;
        }

        .form-row input,
        .form-row select {
            flex: 1;
        }

    .list-box {
        border: 1px solid #999;
        padding: 10px;
        min-height: 150px;
        max-height: 200px;
        overflow-y: auto;
        background-color: white;
        margin-top: 10px;
    }

        .list-box ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .list-box li {
            padding: 5px 0;
            border-bottom: 1px solid #eee;
            cursor: pointer;
        }

            .list-box li:hover {
                background-color: #f0f0f0;
            }

            .list-box li.selected {
                background-color: #e3f2fd;
            }

    .pagination {
        display: flex;
        gap: 5px;
        margin-top: 10px;
        justify-content: flex-start;
        flex-wrap: wrap;
    }

        .pagination button {
            padding: 5px 10px;
            border: 1px solid #999;
            background-color: white;
            cursor: pointer;
            min-width: 35px;
        }

            .pagination button:hover:not(:disabled) {
                background-color: #f0f0f0;
            }

            .pagination button.active {
                background-color: #007bff;
                color: white;
                border-color: #007bff;
            }

            .pagination button:disabled {
                opacity: 0.5;
                cursor: not-allowed;
            }

    .action-buttons {
        display: flex;
        gap: 10px;
        margin-top: 15px;
        flex-wrap: wrap;
    }

    .product-details {
        display: flex;
        gap: 20px;
    }

    .product-form {
        flex: 1;
    }

    .product-image {
        flex: 0 0 200px;
        border: 1px solid #999;
        height: 200px;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: white;
        overflow: hidden;
    }

        .product-image img {
            max-width: 100%;
            max-height: 100%;
            object-fit: contain;
        }

        .product-image .placeholder-text {
            color: #999;
            font-style: italic;
        }

    .dropdown-label {
        display: flex;
        align-items: center;
        gap: 10px;
        margin-bottom: 15px;
    }

    .page-info {
        font-size: 12px;
        color: #666;
        margin-top: 5px;
    }
</style>

<div class="container-fluid mt-4">
    <h2>Maintain</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="section-container">
        <!-- Staff Section -->
        <div class="section-box">
            <div class="dropdown-label">
                <h4>Staff Management</h4>
            </div>

            @using (Html.BeginForm("EditStaff", "Maintain", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <input type="hidden" name="staff_id" id="maintain_staff_id_hidden" />

                <div class="form-row">
                    <label>First Name</label>
                    <input type="text" class="form-control form-control-sm" name="first_name" id="maintain_staff_first_name" required>
                </div>
                <div class="form-row">
                    <label>Last Name</label>
                    <input type="text" class="form-control form-control-sm" name="last_name" id="maintain_staff_last_name" required>
                </div>
                <div class="form-row">
                    <label>Staff ID</label>
                    <input type="text" class="form-control form-control-sm" id="maintain_staff_id" readonly>
                </div>
                <div class="form-row">
                    <label>Email</label>
                    <input type="email" class="form-control form-control-sm" name="email" id="maintain_staff_email" required>
                </div>
                <div class="form-row">
                    <label>Phone</label>
                    <input type="text" class="form-control form-control-sm" name="phone" id="maintain_staff_phone">
                </div>
                <div class="form-row">
                    <label>Active</label>
                    <select class="form-select form-select-sm" name="active" id="maintain_staff_active" required>
                        <option value="1">Yes</option>
                        <option value="0">No</option>
                    </select>
                </div>
                <div class="form-row">
                    <label>Store</label>
                    <select class="form-select form-select-sm" name="store_id" id="maintain_staff_store" required>
                        @foreach (var store in ViewBag.Stores)
                        {
                            <option value="@store.store_id">@store.store_name</option>
                        }
                    </select>
                </div>
                <div class="form-row">
                    <label>Manager</label>
                    <select class="form-select form-select-sm" name="manager_id" id="maintain_staff_manager">
                        <option value="">No Manager</option>
                        @foreach (var mgr in ViewBag.Managers)
                        {
                            <option value="@mgr.staff_id">@mgr.first_name @mgr.last_name</option>
                        }
                    </select>
                </div>

                <div class="list-box">
                    <ul id="maintainStaffList"></ul>
                </div>

                <div class="page-info" id="staffPageInfo">Page 1 of 1</div>
                <div class="pagination" id="staffPagination"></div>

                <div class="action-buttons">
                    <button type="submit" class="btn btn-sm btn-primary">
                        <i class="glyphicon glyphicon-floppy-disk"></i> Update
                    </button>
                    <button type="button" class="btn btn-sm btn-danger" id="deleteStaffBtn">
                        <i class="glyphicon glyphicon-trash"></i> Delete
                    </button>
                </div>
            }

            @using (Html.BeginForm("DeleteStaff", "Maintain", FormMethod.Post, new { id = "deleteStaffForm", style = "display:none;" }))
            {
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" id="delete_staff_id" />
            }
        </div>

        <!-- Customers Section -->
        <div class="section-box">
            <div class="dropdown-label">
                <h4>Customer Management</h4>
            </div>

            @using (Html.BeginForm("EditCustomer", "Maintain", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <input type="hidden" name="customer_id" id="maintain_customer_id_hidden" />

                <div class="form-row">
                    <label>First Name</label>
                    <input type="text" class="form-control form-control-sm" name="first_name" id="maintain_customer_first_name" required>
                </div>
                <div class="form-row">
                    <label>Last Name</label>
                    <input type="text" class="form-control form-control-sm" name="last_name" id="maintain_customer_last_name" required>
                </div>
                <div class="form-row">
                    <label>Customer ID</label>
                    <input type="text" class="form-control form-control-sm" id="maintain_customer_id" readonly>
                </div>
                <div class="form-row">
                    <label>Email</label>
                    <input type="email" class="form-control form-control-sm" name="email" id="maintain_customer_email" required>
                </div>
                <div class="form-row">
                    <label>Phone</label>
                    <input type="text" class="form-control form-control-sm" name="phone" id="maintain_customer_phone">
                </div>
                <div class="form-row">
                    <label>Street</label>
                    <input type="text" class="form-control form-control-sm" name="street" id="maintain_customer_street">
                </div>
                <div class="form-row">
                    <label>City</label>
                    <input type="text" class="form-control form-control-sm" name="city" id="maintain_customer_city">
                </div>
                <div class="form-row">
                    <label>State</label>
                    <input type="text" class="form-control form-control-sm" name="state" id="maintain_customer_state">
                </div>
                <div class="form-row">
                    <label>Zip Code</label>
                    <input type="text" class="form-control form-control-sm" name="zip_code" id="maintain_customer_zip" maxlength="5">
                </div>

                <div class="list-box">
                    <ul id="maintainCustomerList"></ul>
                </div>

                <div class="page-info" id="customerPageInfo">Page 1 of 1</div>
                <div class="pagination" id="customerPagination"></div>

                <div class="action-buttons">
                    <button type="submit" class="btn btn-sm btn-primary">
                        <i class="glyphicon glyphicon-floppy-disk"></i> Update
                    </button>
                    <button type="button" class="btn btn-sm btn-danger" id="deleteCustomerBtn">
                        <i class="glyphicon glyphicon-trash"></i> Delete
                    </button>
                </div>
            }

            @using (Html.BeginForm("DeleteCustomer", "Maintain", FormMethod.Post, new { id = "deleteCustomerForm", style = "display:none;" }))
            {
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" id="delete_customer_id" />
            }
        </div>

        <!-- Products Section -->
        <div class="section-box">
            <div class="dropdown-label">
                <h4>Product Management</h4>
            </div>

            @using (Html.BeginForm("EditProduct", "Maintain", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <input type="hidden" name="product_id" id="maintain_product_id_hidden" />

                <div class="product-details">
                    <div class="product-form">
                        <div class="form-row">
                            <label>Product Name</label>
                            <input type="text" class="form-control form-control-sm" name="product_name" id="maintain_product_name" required>
                        </div>
                        <div class="form-row">
                            <label>Model Year</label>
                            <input type="number" class="form-control form-control-sm" name="model_year" id="maintain_product_year" required>
                        </div>
                        <div class="form-row">
                            <label>Price</label>
                            <input type="number" step="0.01" class="form-control form-control-sm" name="list_price" id="maintain_product_price" required>
                        </div>
                        <div class="form-row">
                            <label>Brand</label>
                            <select class="form-select form-select-sm" name="brand_id" id="maintain_product_brand" required>
                                @foreach (var brand in ViewBag.Brands)
                                {
                                    <option value="@brand.brand_id">@brand.brand_name</option>
                                }
                            </select>
                        </div>
                        <div class="form-row">
                            <label>Category</label>
                            <select class="form-select form-select-sm" name="category_id" id="maintain_product_category" required>
                                @foreach (var category in ViewBag.Categories)
                                {
                                    <option value="@category.category_id">@category.category_name</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="product-image" id="productImageContainer">
                        <span class="placeholder-text">Select a product</span>
                    </div>
                </div>

                <div class="list-box" style="margin-top: 15px;">
                    <ul id="maintainProductList"></ul>
                </div>

                <div class="page-info" id="productPageInfo">Page 1 of 1</div>
                <div class="pagination" id="productPagination"></div>

                <div class="action-buttons">
                    <button type="submit" class="btn btn-sm btn-primary">
                        <i class="glyphicon glyphicon-floppy-disk"></i> Update
                    </button>
                    <button type="button" class="btn btn-sm btn-danger" id="deleteProductBtn">
                        <i class="glyphicon glyphicon-trash"></i> Delete
                    </button>
                </div>
            }

            @using (Html.BeginForm("DeleteProduct", "Maintain", FormMethod.Post, new { id = "deleteProductForm", style = "display:none;" }))
            {
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" id="delete_product_id" />
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var selectedStaffId = null;
            var selectedCustomerId = null;
            var selectedProductId = null;

            var staffData = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(
                Model.Staffs.Select(s => new {
                    staff_id = s.staff_id,
                    first_name = s.first_name,
                    last_name = s.last_name,
                    email = s.email,
                    phone = s.phone,
                    active = s.active,
                    store_id = s.store_id,
                    manager_id = s.manager_id,
                    stores = new { store_name = s.stores != null ? s.stores.store_name : "N/A" }
                }).ToList()
            ));

            var customerData = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(
                Model.Customers.Select(c => new {
                    customer_id = c.customer_id,
                    first_name = c.first_name,
                    last_name = c.last_name,
                    email = c.email,
                    phone = c.phone,
                    city = c.city,
                    street = c.street,
                    state = c.state,
                    zip_code = c.zip_code
                }).ToList()
            ));

            var productData = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(
                Model.Products.Select(p => new {
                    product_id = p.product_id,
                    product_name = p.product_name,
                    brand_id = p.brand_id,
                    brand_name = p.brands != null ? p.brands.brand_name : "N/A",
                    category_id = p.category_id,
                    category_name = p.categories != null ? p.categories.category_name : "N/A",
                    model_year = p.model_year,
                    list_price = p.list_price
                }).ToList()
            ));

            var staffCurrentPage = 1;
            var customerCurrentPage = 1;
            var productCurrentPage = 1;
            var itemsPerPage = 10;

            function createPagination(totalItems, currentPage, paginationElementId, onPageChange) {
                var totalPages = Math.ceil(totalItems / itemsPerPage);
                var $pagination = $('#' + paginationElementId);
                $pagination.empty();

                if (totalPages <= 1) return;

                $pagination.append($('<button>&lt;&lt;</button>').prop('disabled', currentPage === 1).on('click', function() { if (currentPage !== 1) onPageChange(1); }));
                $pagination.append($('<button>&lt;</button>').prop('disabled', currentPage === 1).on('click', function() { if (currentPage > 1) onPageChange(currentPage - 1); }));

                var startPage = Math.max(1, currentPage - 2);
                var endPage = Math.min(totalPages, currentPage + 2);

                if (startPage > 1) {
                    $pagination.append($('<button>1</button>').on('click', function() { onPageChange(1); }));
                    if (startPage > 2) $pagination.append($('<button disabled>...</button>'));
                }

                for (var i = startPage; i <= endPage; i++) {
                    var $pageBtn = $('<button>' + i + '</button>');
                    if (i === currentPage) $pageBtn.addClass('active');
                    $pageBtn.data('page', i).on('click', function() { onPageChange($(this).data('page')); });
                    $pagination.append($pageBtn);
                }

                if (endPage < totalPages) {
                    if (endPage < totalPages - 1) $pagination.append($('<button disabled>...</button>'));
                    $pagination.append($('<button>' + totalPages + '</button>').on('click', function() { onPageChange(totalPages); }));
                }

                $pagination.append($('<button>&gt;</button>').prop('disabled', currentPage === totalPages).on('click', function() { if (currentPage < totalPages) onPageChange(currentPage + 1); }));
                $pagination.append($('<button>&gt;&gt;</button>').prop('disabled', currentPage === totalPages).on('click', function() { if (currentPage !== totalPages) onPageChange(totalPages); }));
            }

            function displayStaffList(page) {
                staffCurrentPage = page;
                var start = (page - 1) * itemsPerPage;
                var end = start + itemsPerPage;
                var pageData = staffData.slice(start, end);

                var $list = $('#maintainStaffList');
                $list.empty();

                $.each(pageData, function(index, staff) {
                    var $li = $('<li class="staff-item"></li>')
                        .attr('data-id', staff.staff_id)
                        .text(staff.first_name + ' ' + staff.last_name + ' - ' + (staff.stores ? staff.stores.store_name : 'N/A'));
                    if (staff.staff_id === selectedStaffId) $li.addClass('selected');
                    $list.append($li);
                });

                createPagination(staffData.length, page, 'staffPagination', displayStaffList);
                var totalPages = Math.ceil(staffData.length / itemsPerPage);
                $('#staffPageInfo').text('Page ' + page + ' of ' + totalPages);
                attachStaffClickHandlers();
            }

            function displayCustomerList(page) {
                customerCurrentPage = page;
                var start = (page - 1) * itemsPerPage;
                var end = start + itemsPerPage;
                var pageData = customerData.slice(start, end);

                var $list = $('#maintainCustomerList');
                $list.empty();

                $.each(pageData, function(index, customer) {
                    var $li = $('<li class="customer-item"></li>')
                        .attr('data-id', customer.customer_id)
                        .text(customer.first_name + ' ' + customer.last_name + ' - ' + (customer.city || 'N/A'));
                    if (customer.customer_id === selectedCustomerId) $li.addClass('selected');
                    $list.append($li);
                });

                createPagination(customerData.length, page, 'customerPagination', displayCustomerList);
                var totalPages = Math.ceil(customerData.length / itemsPerPage);
                $('#customerPageInfo').text('Page ' + page + ' of ' + totalPages);
                attachCustomerClickHandlers();
            }

            function displayProductList(page) {
                productCurrentPage = page;
                var start = (page - 1) * itemsPerPage;
                var end = start + itemsPerPage;
                var pageData = productData.slice(start, end);

                var $list = $('#maintainProductList');
                $list.empty();

                $.each(pageData, function(index, product) {
                    var $li = $('<li class="product-item"></li>')
                        .attr('data-id', product.product_id)
                        .attr('data-product-name', product.product_name)
                        .attr('data-brand-name', product.brand_name)
                        .text(product.product_name + ' - $' + product.list_price.toFixed(2));
                    if (product.product_id === selectedProductId) $li.addClass('selected');
                    $list.append($li);
                });

                createPagination(productData.length, page, 'productPagination', displayProductList);
                var totalPages = Math.ceil(productData.length / itemsPerPage);
                $('#productPageInfo').text('Page ' + page + ' of ' + totalPages);
                attachProductClickHandlers();
            }

            function attachStaffClickHandlers() {
                $('#maintainStaffList').off('click', '.staff-item').on('click', '.staff-item', function() {
                    selectedStaffId = $(this).data('id');
                    $('.staff-item').removeClass('selected');
                    $(this).addClass('selected');

                    var staff = $.grep(staffData, function(s) { return s.staff_id === selectedStaffId; })[0];

                    if (staff) {
                        $('#maintain_staff_first_name').val(staff.first_name);
                        $('#maintain_staff_last_name').val(staff.last_name);
                        $('#maintain_staff_id').val(staff.staff_id);
                        $('#maintain_staff_id_hidden').val(staff.staff_id);
                        $('#maintain_staff_email').val(staff.email);
                        $('#maintain_staff_phone').val(staff.phone || '');
                        $('#maintain_staff_active').val(staff.active);
                        $('#maintain_staff_store').val(staff.store_id);
                        $('#maintain_staff_manager').val(staff.manager_id || '');
                        $('#delete_staff_id').val(staff.staff_id);
                    }
                });
            }

            function attachCustomerClickHandlers() {
                $('#maintainCustomerList').off('click', '.customer-item').on('click', '.customer-item', function() {
                    selectedCustomerId = $(this).data('id');
                    $('.customer-item').removeClass('selected');
                    $(this).addClass('selected');

                    var customer = $.grep(customerData, function(c) { return c.customer_id === selectedCustomerId; })[0];

                    if (customer) {
                        $('#maintain_customer_first_name').val(customer.first_name);
                        $('#maintain_customer_last_name').val(customer.last_name);
                        $('#maintain_customer_id').val(customer.customer_id);
                        $('#maintain_customer_id_hidden').val(customer.customer_id);
                        $('#maintain_customer_email').val(customer.email);
                        $('#maintain_customer_phone').val(customer.phone || '');
                        $('#maintain_customer_street').val(customer.street || '');
                        $('#maintain_customer_city').val(customer.city || '');
                        $('#maintain_customer_state').val(customer.state || '');
                        $('#maintain_customer_zip').val(customer.zip_code || '');
                        $('#delete_customer_id').val(customer.customer_id);
                    }
                });
            }

            function attachProductClickHandlers() {
                $('#maintainProductList').off('click', '.product-item').on('click', '.product-item', function() {
                    selectedProductId = $(this).data('id');
                    var productName = $(this).data('product-name');
                    var brandName = $(this).data('brand-name');

                    $('.product-item').removeClass('selected');
                    $(this).addClass('selected');

                    var product = $.grep(productData, function(p) { return p.product_id === selectedProductId; })[0];

                    if (product) {
                        $('#maintain_product_name').val(product.product_name);
                        $('#maintain_product_year').val(product.model_year);
                        $('#maintain_product_price').val(product.list_price);
                        $('#maintain_product_brand').val(product.brand_id);
                        $('#maintain_product_category').val(product.category_id);
                        $('#maintain_product_id_hidden').val(product.product_id);
                        $('#delete_product_id').val(product.product_id);

                        loadProductImage(product.product_id, brandName, product.product_name);
                    }
                });
            }

            function loadProductImage(productId, brandName, productName) {
                var extensions = ['.jpg', '.jpeg', '.png', '.gif', '.webp'];
                var imagePaths = [];

                $.each(extensions, function(index, ext) {
                    imagePaths.push('/Images/' + productId + ext);
                });

                if (brandName && brandName !== 'N/A') {
                    $.each(extensions, function(index, ext) {
                        imagePaths.push('/Images/' + brandName.replace(/\s+/g, '_') + ext);
                    });
                }

                tryLoadImage(imagePaths, 0);
            }

            function tryLoadImage(paths, index) {
                if (index >= paths.length) {
                    $('#productImageContainer').html('<span class="placeholder-text">No image available</span>');
                    return;
                }

                $('<img>')
                    .on('load', function() {
                        $('#productImageContainer').html($('<img>').attr('src', paths[index]).attr('alt', 'Product Image'));
                    })
                    .on('error', function() {
                        tryLoadImage(paths, index + 1);
                    })
                    .attr('src', paths[index]);
            }

            displayStaffList(1);
            displayCustomerList(1);
            displayProductList(1);

            // Delete button handlers
            $('#deleteStaffBtn').on('click', function(e) {
                e.preventDefault();
                if (!selectedStaffId) {
                    alert('Please select a staff member first');
                    return false;
                }
                if (confirm('Are you sure you want to delete this staff member?')) {
                    $('#deleteStaffForm').submit();
                }
            });

            $('#deleteCustomerBtn').on('click', function(e) {
                e.preventDefault();
                if (!selectedCustomerId) {
                    alert('Please select a customer first');
                    return false;
                }
                if (confirm('Are you sure you want to delete this customer?')) {
                    $('#deleteCustomerForm').submit();
                }
            });

            $('#deleteProductBtn').on('click', function(e) {
                e.preventDefault();
                if (!selectedProductId) {
                    alert('Please select a product first');
                    return false;
                }
                if (confirm('Are you sure you want to delete this product?')) {
                    $('#deleteProductForm').submit();
                }
            });
        });
    </script>
}