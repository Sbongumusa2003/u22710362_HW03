@{
    ViewBag.Title = "Report - Bike Store Management";
}

<style>
    .report-container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 20px;
    }

    .report-section {
        border: 2px solid #ccc;
        padding: 20px;
        margin-bottom: 20px;
        background-color: #f9f9f9;
        border-radius: 5px;
    }

    .report-content {
        background-color: white;
        padding: 30px;
        border: 1px solid #ddd;
        margin-bottom: 20px;
        border-radius: 5px;
    }

    .chart-container {
        margin: 30px 0;
        padding: 20px;
        background-color: white;
        position: relative;
        height: 500px;
        width: 100%;
    }

    .data-table {
        margin-top: 20px;
        overflow-x: auto;
    }

        .data-table table {
            width: 100%;
            border-collapse: collapse;
        }

        .data-table th, .data-table td {
            border: 1px solid #ddd;
            padding: 12px 15px;
            text-align: left;
        }

        .data-table th {
            background-color: #007bff;
            color: white;
            font-weight: bold;
        }

        .data-table tr:nth-child(even) {
            background-color: #f9f9f9;
        }

    .pdf-actions {
        display: flex;
        gap: 10px;
        margin-top: 15px;
        flex-wrap: wrap;
        align-items: center;
    }

    .save-options {
        display: flex;
        gap: 15px;
        align-items: center;
        margin-top: 15px;
        padding: 15px;
        background-color: #e9ecef;
        border-radius: 4px;
        flex-wrap: wrap;
    }

    .archive-section {
        margin-top: 30px;
        border: 2px solid #ccc;
        padding: 20px;
        background-color: #f9f9f9;
        border-radius: 5px;
    }

    .archive-list {
        border: 2px solid #ccc;
        padding: 15px;
        background-color: white;
        min-height: 200px;
        max-height: 500px;
        overflow-y: auto;
        border-radius: 5px;
    }

    .archive-item {
        padding: 15px;
        background-color: #f8f9fa;
        margin-bottom: 10px;
        border: 1px solid #ddd;
        border-radius: 4px;
    }

    .archive-item-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 10px;
    }

    .archive-item-actions {
        display: flex;
        gap: 10px;
        flex-wrap: wrap;
    }

    .archive-item-description {
        margin-top: 10px;
        padding: 10px;
        background-color: white;
        border: 1px solid #ddd;
        border-radius: 4px;
        display: none;
    }

    .description-editor {
        margin-top: 20px;
        padding: 15px;
        background-color: #fff;
        border: 1px solid #ddd;
        border-radius: 4px;
    }

    .summary-stats {
        display: flex;
        gap: 20px;
        margin: 20px 0;
        flex-wrap: wrap;
    }

    .stat-box {
        flex: 1;
        min-width: 200px;
        padding: 15px;
        background: #007bff;
        color: white;
        border-radius: 8px;
    }

    .stat-value {
        font-size: 32px;
        font-weight: bold;
    }

    .stat-label {
        font-size: 14px;
    }

    .button-group {
        display: flex;
        gap: 10px;
        flex-wrap: wrap;
        align-items: center;
    }
</style>

<div class="report-container">
    <h2>Sales Report</h2>

    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage as string))
    {
        <div class="alert alert-danger">
            @ViewBag.ErrorMessage
        </div>
    }

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <!-- Report Display Section -->
    <div class="report-section">
        <h3>Popular Products Report</h3>

        <div class="report-content" id="reportContent">
            <p>Report Generated: <span id="reportDate"></span></p>

            <!-- Summary Statistics -->
            <div class="summary-stats">
                <div class="stat-box">
                    <div class="stat-value" id="totalOrdersValue">0</div>
                    <div class="stat-label">Total Orders (Top 10)</div>
                </div>
                <div class="stat-box">
                    <div class="stat-value" id="avgOrdersValue">0</div>
                    <div class="stat-label">Avg Orders per Product</div>
                </div>
            </div>

            <!-- Chart Container -->
            <div class="chart-container">
                <canvas id="reportChart"></canvas>
            </div>

            <!-- Data Table -->
            <div class="data-table">
                <table id="reportTable">
                    <thead>
                        <tr>
                            <th>Rank</th>
                            <th>Product Name</th>
                            <th>Brand</th>
                            <th>Category</th>
                            <th>Total Orders</th>
                        </tr>
                    </thead>
                    <tbody id="reportTableBody">
                    </tbody>
                </table>
            </div>
        </div>

        <div class="pdf-actions">
            <button type="button" id="openPdfBtn" class="btn btn-info">
                <i class="glyphicon glyphicon-eye-open"></i> Open PDF
            </button>
            <button type="button" id="printPdfBtn" class="btn btn-warning">
                <i class="glyphicon glyphicon-print"></i> Print PDF
            </button>
            <button type="button" id="downloadPdfBtn" class="btn btn-success">
                <i class="glyphicon glyphicon-download"></i> Download PDF
            </button>
        </div>

        <!-- Save Report Section -->
        <div class="description-editor">
            <h4>Save Report</h4>
            @using (Html.BeginForm("SaveReport", "Report", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <input type="hidden" name="reportHtml" id="reportHtmlInput" />
                <input type="hidden" name="description" id="descriptionInput" />

                <div class="save-options">
                    <div>
                        <label for="reportFileName">File Name:</label>
                        <input type="text" class="form-control" id="reportFileName" name="fileName" placeholder="Report" style="width: 200px;" />
                    </div>
                    <div>
                        <label for="reportFileType">Format:</label>
                        <select class="form-select" id="reportFileType" name="fileType" style="width: 120px;">
                            <option value="html">HTML</option>
                            <option value="txt">Text</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary" id="saveReportBtn">
                        <i class="glyphicon glyphicon-floppy-disk"></i> Save Report
                    </button>
                </div>

                <div style="margin-top: 15px;">
                    <label for="descriptionEditor">Description (Optional):</label>
                    <textarea class="form-control" id="descriptionEditor" rows="5" placeholder="Enter description for this report..."></textarea>
                </div>
            }
        </div>
    </div>

    <!-- Archive Section -->
    <div class="archive-section">
        <h3>Saved Reports Archive</h3>
        <div class="archive-list">
            @if (ViewBag.SavedFiles != null && ((List<u22710362_HW03.Models.SavedFileInfo>)ViewBag.SavedFiles).Count > 0)
            {
                foreach (var file in (List<u22710362_HW03.Models.SavedFileInfo>)ViewBag.SavedFiles)
                {
                    var descPath = file.FilePath + ".description.txt";
                    var hasDescription = System.IO.File.Exists(descPath);
                    var description = hasDescription ? System.IO.File.ReadAllText(descPath) : "";

                    <div class="archive-item" data-filename="@file.FileName">
                        <div class="archive-item-header">
                            <div>
                                <strong>@file.FileName</strong>
                                <br />
                                <small class="text-muted">
                                    Created: @file.CreatedDate.ToString("yyyy-MM-dd HH:mm:ss") |
                                    Size: @(file.FileSize / 1024.0).ToString("F2") KB
                                </small>
                            </div>
                            <div class="archive-item-actions">
                                @if (hasDescription && !string.IsNullOrWhiteSpace(description))
                                {
                                    <button type="button" class="btn btn-sm btn-info view-description">
                                        <i class="glyphicon glyphicon-info-sign"></i> Description
                                    </button>
                                }
                                <a href="@Url.Action("DownloadFile", "Report", new { fileName = file.FileName })" class="btn btn-sm btn-success">
                                    <i class="glyphicon glyphicon-download"></i> Download
                                </a>
                                @using (Html.BeginForm("DeleteFile", "Report", FormMethod.Post, new { style = "display:inline;" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="fileName" value="@file.FileName" />
                                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this file?');">
                                        <i class="glyphicon glyphicon-trash"></i> Delete
                                    </button>
                                }
                            </div>
                        </div>
                        @if (hasDescription && !string.IsNullOrWhiteSpace(description))
                        {
                            <div class="archive-item-description" style="display:none;">
                                @Html.Raw(description)
                            </div>
                        }
                    </div>
                }
            }
            else
            {
                <p class="text-center text-muted">No saved reports yet. Save a report to see it here.</p>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/vfs_fonts.js"></script>

    <script>
        var reportData = @Html.Raw(ViewBag.ReportData ?? "[]");
        var reportChart = null;

        $(document).ready(function () {
            console.log("Report data:", reportData);

            if (!reportData || reportData.length === 0) {
                $('#reportContent').html('<div class="alert alert-warning">No report data available. Please ensure there are orders in the database with order items.</div>');
                $('.pdf-actions, .save-options, .description-editor').hide();
                return;
            }

            $('#reportDate').text(new Date().toLocaleString());

            var totalOrders = 0;
            $.each(reportData, function(index, item) {
                totalOrders += item.Value;
            });
            var avgOrders = (totalOrders / reportData.length).toFixed(2);

            $('#totalOrdersValue').text(totalOrders);
            $('#avgOrdersValue').text(avgOrders);

            var $tableBody = $('#reportTableBody');
            $tableBody.empty();

            $.each(reportData, function(index, item) {
                var $row = $('<tr>')
                    .append($('<td>').text(index + 1))
                    .append($('<td>').text(item.Label))
                    .append($('<td>').text(item.Brand))
                    .append($('<td>').text(item.Category))
                    .append($('<td>').text(item.Value));
                $tableBody.append($row);
            });

            var ctx = $('#reportChart');
            if (ctx.length > 0) {
                ctx = ctx[0].getContext('2d');

                var labels = [];
                var data = [];
                var colors = [];

                $.each(reportData, function(index, item) {
                    labels.push(item.Label);
                    data.push(item.Value);
                    var hue = (index * 360 / reportData.length);
                    colors.push('hsl(' + hue + ', 70%, 60%)');
                });

                reportChart = new Chart(ctx, {
                    type: 'bar',
                    data: {
                        labels: labels,
                        datasets: [{
                            label: 'Number of Orders',
                            data: data,
                            backgroundColor: colors,
                            borderColor: $.map(colors, function(color) {
                                return color.replace('60%', '50%');
                            }),
                            borderWidth: 2
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: true,
                        aspectRatio: 2,
                        scales: {
                            yAxes: [{
                                ticks: {
                                    beginAtZero: true,
                                    stepSize: 1,
                                    fontSize: 12
                                },
                                scaleLabel: {
                                    display: true,
                                    labelString: 'Number of Orders',
                                    fontSize: 14,
                                    fontStyle: 'bold'
                                },
                                gridLines: {
                                    display: true,
                                    color: 'rgba(0,0,0,0.1)'
                                }
                            }],
                            xAxes: [{
                                ticks: {
                                    autoSkip: false,
                                    maxRotation: 45,
                                    minRotation: 45,
                                    fontSize: 11
                                },
                                gridLines: {
                                    display: false
                                }
                            }]
                        },
                        legend: {
                            display: true,
                            position: 'top',
                            labels: {
                                fontSize: 13
                            }
                        },
                        title: {
                            display: true,
                            text: 'Top 10 Most Popular Products',
                            fontSize: 18,
                            fontStyle: 'bold'
                        },
                        tooltips: {
                            enabled: true,
                            mode: 'index',
                            intersect: false,
                            callbacks: {
                                label: function(tooltipItem, data) {
                                    return 'Orders: ' + tooltipItem.yLabel;
                                }
                            }
                        }
                    }
                });
            }

            function getPdfDocDef() {
                var tableBody = [
                    [
                        { text: 'Rank', style: 'tableHeader' },
                        { text: 'Product Name', style: 'tableHeader' },
                        { text: 'Brand', style: 'tableHeader' },
                        { text: 'Category', style: 'tableHeader' },
                        { text: 'Orders', style: 'tableHeader' }
                    ]
                ];

                $.each(reportData, function(index, item) {
                    tableBody.push([
                        (index + 1).toString(),
                        item.Label,
                        item.Brand,
                        item.Category,
                        item.Value.toString()
                    ]);
                });

                var chartImage = reportChart.toBase64Image();

                var docDefinition = {
                    content: [
                        { text: 'Bike Store Sales Report', style: 'header' },
                        { text: 'Top 10 Most Popular Bicycle Products', style: 'subheader' },
                        { text: 'Generated: ' + new Date().toLocaleString(), style: 'dateText' },
                        { text: '\n' },
                        {
                            columns: [
                                {
                                    width: '50%',
                                    text: [
                                        { text: 'Total Orders (Top 10): ', bold: true },
                                        totalOrders.toString()
                                    ]
                                },
                                {
                                    width: '50%',
                                    text: [
                                        { text: 'Avg Orders per Product: ', bold: true },
                                        avgOrders
                                    ]
                                }
                            ],
                            style: 'stats'
                        },
                        { text: '\n' },
                        {
                            text: 'Product Orders Chart',
                            style: 'chartTitle'
                        },
                        {
                            image: chartImage,
                            width: 500,
                            height: 300,
                            margin: [0, 10, 0, 20],
                            alignment: 'center'
                        },
                        {
                            text: 'Detailed Product Statistics',
                            style: 'tableTitle'
                        },
                        {
                            table: {
                                headerRows: 1,
                                widths: [40, '*', 100, 100, 60],
                                body: tableBody
                            },
                            layout: {
                                fillColor: function (rowIndex, node, columnIndex) {
                                    return (rowIndex === 0) ? '#007bff' : (rowIndex % 2 === 0) ? '#f9f9f9' : null;
                                },
                                hLineWidth: function (i, node) { return 1; },
                                vLineWidth: function (i, node) { return 1; },
                                hLineColor: function (i, node) { return '#ddd'; },
                                vLineColor: function (i, node) { return '#ddd'; }
                            }
                        },
                        { text: '\n' },
                        {
                            text: [
                                { text: 'Report End\n', style: 'footer' },
                                { text: 'Generated by Bike Store Management System', style: 'footerSmall' }
                            ],
                            alignment: 'center'
                        }
                    ],
                    styles: {
                        header: {
                            fontSize: 22,
                            bold: true,
                            margin: [0, 0, 0, 10],
                            alignment: 'center',
                            color: '#007bff'
                        },
                        subheader: {
                            fontSize: 16,
                            bold: true,
                            margin: [0, 0, 0, 5],
                            alignment: 'center'
                        },
                        dateText: {
                            fontSize: 10,
                            italics: true,
                            alignment: 'center',
                            margin: [0, 0, 0, 10],
                            color: '#666'
                        },
                        stats: {
                            fontSize: 12,
                            margin: [0, 10, 0, 10]
                        },
                        chartTitle: {
                            fontSize: 14,
                            bold: true,
                            margin: [0, 10, 0, 5]
                        },
                        tableTitle: {
                            fontSize: 14,
                            bold: true,
                            margin: [0, 10, 0, 10]
                        },
                        tableHeader: {
                            bold: true,
                            fontSize: 11,
                            color: 'white'
                        },
                        footer: {
                            fontSize: 12,
                            italics: true,
                            margin: [0, 10, 0, 5]
                        },
                        footerSmall: {
                            fontSize: 10,
                            color: '#666'
                        }
                    },
                    pageOrientation: 'portrait',
                    pageMargins: [40, 60, 40, 60]
                };

                return docDefinition;
            }

            $('#openPdfBtn').on('click', function() {
                try {
                    pdfMake.createPdf(getPdfDocDef()).open();
                } catch (error) {
                    console.error('Error opening PDF:', error);
                    alert('Error opening PDF: ' + error.message);
                }
            });

            $('#printPdfBtn').on('click', function() {
                try {
                    pdfMake.createPdf(getPdfDocDef()).print();
                } catch (error) {
                    console.error('Error printing PDF:', error);
                    alert('Error printing PDF: ' + error.message);
                }
            });

            $('#downloadPdfBtn').on('click', function() {
                try {
                    var fileName = $.trim($('#reportFileName').val()) || 'BikeStoreReport';
                    pdfMake.createPdf(getPdfDocDef()).download(fileName + '.pdf');
                } catch (error) {
                    console.error('Error downloading PDF:', error);
                    alert('Error downloading PDF: ' + error.message);
                }
            });

            $('form[action*="SaveReport"]').on('submit', function(e) {
                try {
                    var fileName = $.trim($('#reportFileName').val());
                    if (!fileName) {
                        fileName = 'Report';
                    }

                    var description = $('#descriptionEditor').val() || '';

                    var reportHtml = '<!DOCTYPE html><html><head><title>' + fileName + '</title>';
                    reportHtml += '<meta charset="utf-8">';
                    reportHtml += '<style>body{font-family:Arial,sans-serif;margin:20px;line-height:1.6;}';
                    reportHtml += 'h1{color:#007bff;text-align:center;}';
                    reportHtml += 'table{width:100%;border-collapse:collapse;margin-top:20px;}';
                    reportHtml += 'th,td{border:1px solid #ddd;padding:10px;text-align:left;}';
                    reportHtml += 'th{background:#007bff;color:white;font-weight:bold;}';
                    reportHtml += 'tr:nth-child(even){background:#f9f9f9;}';
                    reportHtml += '.stats{background:#e9ecef;padding:15px;border-radius:5px;margin:20px 0;}';
                    reportHtml += '</style></head><body>';
                    reportHtml += '<h1>Bike Store Sales Report</h1>';
                    reportHtml += '<p style="text-align:center;color:#666;"><em>Generated: ' + new Date().toLocaleString() + '</em></p>';
                    reportHtml += '<div class="stats">';
                    reportHtml += '<p><strong>Total Orders (Top 10):</strong> ' + totalOrders + '</p>';
                    reportHtml += '<p><strong>Average Orders per Product:</strong> ' + avgOrders + '</p>';
                    reportHtml += '</div>';
                    reportHtml += '<h2>Top 10 Products</h2>';
                    reportHtml += '<table><thead><tr><th>Rank</th><th>Product</th><th>Brand</th><th>Category</th><th>Orders</th></tr></thead><tbody>';

                    $.each(reportData, function(index, item) {
                        reportHtml += '<tr>';
                        reportHtml += '<td>' + (index + 1) + '</td>';
                        reportHtml += '<td>' + item.Label + '</td>';
                        reportHtml += '<td>' + item.Brand + '</td>';
                        reportHtml += '<td>' + item.Category + '</td>';
                        reportHtml += '<td>' + item.Value + '</td>';
                        reportHtml += '</tr>';
                    });

                    reportHtml += '</tbody></table></body></html>';

                    $('#reportHtmlInput').val(reportHtml);
                    $('#descriptionInput').val(description);

                    console.log('Form submitting with:', {
                        fileName: fileName,
                        fileType: $('#reportFileType').val(),
                        htmlLength: reportHtml.length,
                        descLength: description.length
                    });

                    return true;
                } catch (error) {
                    console.error('Error preparing report:', error);
                    alert('Error preparing report: ' + error.message);
                    return false;
                }
            });

            // Description toggle
            $(document).on('click', '.view-description', function() {
                var $item = $(this).closest('.archive-item');
                var $descDiv = $item.find('.archive-item-description');

                if ($descDiv.is(':visible')) {
                    $descDiv.slideUp();
                    $(this).html('<i class="glyphicon glyphicon-info-sign"></i> Description');
                } else {
                    $descDiv.slideDown();
                    $(this).html('<i class="glyphicon glyphicon-info-sign"></i> Hide Description');
                }
            });
        });
    </script>
}