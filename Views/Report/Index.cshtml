@{
    ViewBag.Title = "Report - Bike Store Management";
}

<style>
    .report-container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 20px;
    }

    .report-section {
        border: 2px solid #ccc;
        padding: 20px;
        margin-bottom: 20px;
        background-color: #f9f9f9;
        border-radius: 5px;
    }

    .report-content {
        background-color: white;
        padding: 30px;
        border: 1px solid #ddd;
        margin-bottom: 20px;
        border-radius: 5px;
    }

    .chart-container {
        margin: 30px 0;
        padding: 20px;
        background-color: white;
        position: relative;
        height: 450px;
    }

    .data-table {
        margin-top: 20px;
        overflow-x: auto;
    }

        .data-table table {
            width: 100%;
            border-collapse: collapse;
        }

        .data-table th, .data-table td {
            border: 1px solid #ddd;
            padding: 12px 15px;
            text-align: left;
        }

        .data-table th {
            background-color: #007bff;
            color: white;
            font-weight: bold;
        }

        .data-table tr:nth-child(even) {
            background-color: #f9f9f9;
        }

    .pdf-actions {
        display: flex;
        gap: 15px;
        margin-top: 15px;
        flex-wrap: wrap;
    }

    .save-options {
        display: flex;
        gap: 15px;
        align-items: center;
        margin-top: 15px;
        padding: 15px;
        background-color: #e9ecef;
        border-radius: 4px;
        flex-wrap: wrap;
    }

    .archive-section {
        margin-top: 30px;
        border: 2px solid #ccc;
        padding: 20px;
        background-color: #f9f9f9;
        border-radius: 5px;
    }

    .archive-list {
        border: 2px solid #ccc;
        padding: 15px;
        background-color: white;
        min-height: 200px;
        max-height: 500px;
        overflow-y: auto;
        border-radius: 5px;
    }

    .archive-item {
        padding: 15px;
        background-color: #f8f9fa;
        margin-bottom: 10px;
        border: 1px solid #ddd;
        border-radius: 4px;
    }

    .archive-item-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 10px;
    }

    .archive-item-actions {
        display: flex;
        gap: 10px;
        flex-wrap: wrap;
    }

    .archive-item-description {
        margin-top: 10px;
        padding: 10px;
        background-color: white;
        border: 1px solid #ddd;
        border-radius: 4px;
        display: none;
    }

    .description-editor {
        margin-top: 20px;
        padding: 15px;
        background-color: #fff;
        border: 1px solid #ddd;
        border-radius: 4px;
    }

    .summary-stats {
        display: flex;
        gap: 20px;
        margin: 20px 0;
        flex-wrap: wrap;
    }

    .stat-box {
        flex: 1;
        min-width: 200px;
        padding: 15px;
        background: #007bff;
        color: white;
        border-radius: 8px;
    }

    .stat-value {
        font-size: 32px;
        font-weight: bold;
    }

    .stat-label {
        font-size: 14px;
    }
</style>

<div class="report-container">
    <h2>Sales Report</h2>

    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage as string))
    {
        <div class="alert alert-danger">
            @ViewBag.ErrorMessage
        </div>
    }

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    <!-- Report Display Section -->
    <div class="report-section">
        <h3>Popular Products Report</h3>

        <div class="report-content" id="reportContent">
            <h4>Top 10 Most Popular Bicycle Products</h4>
            <p>Report Generated: <span id="reportDate"></span></p>

            <!-- Summary Statistics -->
            <div class="summary-stats">
                <div class="stat-box">
                    <div class="stat-value" id="totalOrdersValue">0</div>
                    <div class="stat-label">Total Orders (Top 10)</div>
                </div>
                <div class="stat-box">
                    <div class="stat-value" id="avgOrdersValue">0</div>
                    <div class="stat-label">Avg Orders per Product</div>
                </div>
            </div>

            <!-- Chart Container -->
            <div class="chart-container">
                <canvas id="reportChart"></canvas>
            </div>

            <!-- Data Table -->
            <div class="data-table">
                <table id="reportTable">
                    <thead>
                        <tr>
                            <th>Rank</th>
                            <th>Product Name</th>
                            <th>Brand</th>
                            <th>Category</th>
                            <th>Total Orders</th>
                        </tr>
                    </thead>
                    <tbody id="reportTableBody">
                    </tbody>
                </table>
            </div>
        </div>

        <!-- PDF Actions using pdfMake -->
        <div class="pdf-actions">
            <button type="button" id="openPdfBtn" class="btn btn-info">Open PDF</button>
            <button type="button" id="printPdfBtn" class="btn btn-warning">Print PDF</button>
            <button type="button" id="downloadPdfBtn" class="btn btn-success">Download PDF</button>
        </div>

        <!-- Save Options (HTML/TXT) - NO AJAX, uses traditional form POST -->
        @using (Html.BeginForm("SaveReport", "Report", FormMethod.Post, new { id = "saveReportForm" }))
        {
            <input type="hidden" name="reportHtml" id="reportHtmlInput" />
            <input type="hidden" name="description" id="descriptionInput" />

            <div class="save-options">
                <label><strong>Save as HTML/TXT:</strong></label>
                <label>Filename:</label>
                <input type="text" name="fileName" id="reportFileName" value="BikeStoreReport" class="form-control" style="width: 250px;">

                <label>File Type:</label>
                <select name="fileType" id="reportFileType" class="form-control" style="width: 150px;">
                    <option value="html">HTML</option>
                    <option value="txt">Text</option>
                </select>

                <button type="submit" class="btn btn-primary">Save Report</button>
            </div>
        }

        <!-- Description Editor -->
        <div class="description-editor">
            <h5>Add Description (Optional - Bonus Feature)</h5>
            <div id="descriptionEditor"></div>
        </div>
    </div>

    <!-- Document Archive Section -->
    <div class="archive-section">
        <h3>Document Archive</h3>
        <div class="archive-list" id="archiveList">
            @if (ViewBag.SavedFiles != null && ((List<u22710362_HW03.Models.SavedFileInfo>)ViewBag.SavedFiles).Count > 0)
            {
                foreach (var file in (List<u22710362_HW03.Models.SavedFileInfo>)ViewBag.SavedFiles)
                {
                    <div class="archive-item">
                        <div class="archive-item-header">
                            <div>
                                <strong>@file.FileName</strong><br />
                                <small>Size: @((file.FileSize / 1024.0).ToString("F2")) KB | Created: @file.CreatedDate.ToString("yyyy-MM-dd HH:mm")</small>
                            </div>
                            <div class="archive-item-actions">
                                <button class="btn btn-sm btn-info view-description" data-filename="@file.FileName">View Description</button>
                                <a href="@Url.Action("DownloadFile", "Report", new { fileName = file.FileName })" class="btn btn-sm btn-success">Download</a>

                                @using (Html.BeginForm("DeleteFile", "Report", FormMethod.Post, new { style = "display:inline;" }))
                                {
                                    <input type="hidden" name="fileName" value="@file.FileName" />
                                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this file?');">Delete</button>
                                }
                            </div>
                        </div>
                        <div class="archive-item-description" data-filename="@file.FileName"></div>
                    </div>
                }
            }
            else
            {
                <p style="text-align: center; padding: 40px; color: #999;">No saved reports</p>
            }
        </div>
    </div>
</div>

@section Scripts {
    <!-- Chart.js CDN -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.min.js"></script>

    <!-- pdfMake CDN -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/vfs_fonts.js"></script>

    <!-- Summernote WYSIWYG Editor -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.18/summernote.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.18/summernote.min.js"></script>

    <script>
        // NO AJAX - Get report data from server (embedded at page load)
        var reportData = @Html.Raw(ViewBag.ReportData ?? "[]");
        var reportChart = null;

        // NO AJAX - Get file descriptions embedded at page load
        var fileDescriptions = {
            @if (ViewBag.SavedFiles != null)
            {
                var files = (List<u22710362_HW03.Models.SavedFileInfo>)ViewBag.SavedFiles;
                for (int i = 0; i < files.Count; i++)
                {
                    var descPath = files[i].FilePath + ".description.txt";
                    var desc = System.IO.File.Exists(descPath) ? System.IO.File.ReadAllText(descPath) : "";
                    @: "@Html.Raw(files[i].FileName)": "@Html.Raw(HttpUtility.JavaScriptStringEncode(desc))"@(i < files.Count - 1 ? "," : "")
                }
            }
        };

        $(document).ready(function () {
            console.log("Report data:", reportData);

            if (!reportData || reportData.length === 0) {
                $('#reportContent').html('<div class="alert alert-warning">No report data available. Please ensure there are orders in the database with order items.</div>');
                return;
            }

            // PURE JQUERY - Initialize Summernote editor
            $('#descriptionEditor').summernote({
                height: 200,
                placeholder: 'Enter description for this report...',
                toolbar: [
                    ['style', ['bold', 'italic', 'underline', 'clear']],
                    ['font', ['strikethrough', 'superscript', 'subscript']],
                    ['para', ['ul', 'ol', 'paragraph']],
                    ['insert', ['link']],
                    ['view', ['fullscreen', 'codeview', 'help']]
                ]
            });

            // PURE JQUERY - Set report date
            $('#reportDate').text(new Date().toLocaleString());

            // Calculate statistics
            var totalOrders = 0;
            $.each(reportData, function(index, item) {
                totalOrders += item.Value;
            });
            var avgOrders = (totalOrders / reportData.length).toFixed(2);

            $('#totalOrdersValue').text(totalOrders);
            $('#avgOrdersValue').text(avgOrders);

            // PURE JQUERY - Populate table
            var $tableBody = $('#reportTableBody');
            $tableBody.empty();

            $.each(reportData, function(index, item) {
                var $row = $('<tr>')
                    .append($('<td>').text(index + 1))
                    .append($('<td>').text(item.Label))
                    .append($('<td>').text(item.Brand))
                    .append($('<td>').text(item.Category))
                    .append($('<td>').text(item.Value));
                $tableBody.append($row);
            });

            // PURE JQUERY - Create Chart (Chart.js with jQuery selectors)
            var ctx = $('#reportChart');
            if (ctx.length > 0) {
                ctx = ctx[0].getContext('2d');

                var labels = [];
                var data = [];
                var colors = [];

                $.each(reportData, function(index, item) {
                    labels.push(item.Label);
                    data.push(item.Value);
                    var hue = (index * 360 / reportData.length);
                    colors.push('hsl(' + hue + ', 70%, 60%)');
                });

                reportChart = new Chart(ctx, {
                    type: 'bar',
                    data: {
                        labels: labels,
                        datasets: [{
                            label: 'Number of Orders',
                            data: data,
                            backgroundColor: colors,
                            borderColor: $.map(colors, function(color) {
                                return color.replace('60%', '50%');
                            }),
                            borderWidth: 1
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        scales: {
                            yAxes: [{
                                ticks: {
                                    beginAtZero: true,
                                    stepSize: 1
                                },
                                scaleLabel: {
                                    display: true,
                                    labelString: 'Number of Orders'
                                }
                            }],
                            xAxes: [{
                                ticks: {
                                    autoSkip: false,
                                    maxRotation: 45,
                                    minRotation: 45
                                }
                            }]
                        },
                        legend: {
                            display: true,
                            position: 'top'
                        },
                        title: {
                            display: true,
                            text: 'Top 10 Most Popular Products',
                            fontSize: 16
                        }
                    }
                });
            }

            // Function to generate PDF Document Definition
            function getPdfDocDef() {
                var tableBody = [
                    [
                        { text: 'Rank', style: 'tableHeader' },
                        { text: 'Product Name', style: 'tableHeader' },
                        { text: 'Brand', style: 'tableHeader' },
                        { text: 'Category', style: 'tableHeader' },
                        { text: 'Orders', style: 'tableHeader' }
                    ]
                ];

                $.each(reportData, function(index, item) {
                    tableBody.push([
                        (index + 1).toString(),
                        item.Label,
                        item.Brand,
                        item.Category,
                        item.Value.toString()
                    ]);
                });

                var chartImage = reportChart.toBase64Image();

                var docDefinition = {
                    content: [
                        { text: 'Bike Store Sales Report', style: 'header' },
                        { text: 'Top 10 Most Popular Bicycle Products', style: 'subheader' },
                        { text: 'Generated: ' + new Date().toLocaleString(), style: 'dateText' },
                        { text: '\n' },
                        {
                            columns: [
                                {
                                    width: '50%',
                                    text: [
                                        { text: 'Total Orders (Top 10): ', bold: true },
                                        totalOrders.toString()
                                    ]
                                },
                                {
                                    width: '50%',
                                    text: [
                                        { text: 'Avg Orders per Product: ', bold: true },
                                        avgOrders
                                    ]
                                }
                            ],
                            style: 'stats'
                        },
                        { text: '\n' },
                        {
                            text: 'Product Orders Chart',
                            style: 'chartTitle'
                        },
                        {
                            image: chartImage,
                            width: 500,
                            height: 300,
                            margin: [0, 10, 0, 20],
                            alignment: 'center'
                        },
                        {
                            text: 'Detailed Product Statistics',
                            style: 'tableTitle'
                        },
                        {
                            table: {
                                headerRows: 1,
                                widths: [40, '*', 100, 100, 60],
                                body: tableBody
                            },
                            layout: {
                                fillColor: function (rowIndex, node, columnIndex) {
                                    return (rowIndex === 0) ? '#007bff' : (rowIndex % 2 === 0) ? '#f9f9f9' : null;
                                },
                                hLineWidth: function (i, node) { return 1; },
                                vLineWidth: function (i, node) { return 1; },
                                hLineColor: function (i, node) { return '#ddd'; },
                                vLineColor: function (i, node) { return '#ddd'; }
                            }
                        },
                        { text: '\n' },
                        {
                            text: [
                                { text: 'Report End\n', style: 'footer' },
                                { text: 'Generated by Bike Store Management System', style: 'footerSmall' }
                            ],
                            alignment: 'center'
                        }
                    ],
                    styles: {
                        header: {
                            fontSize: 22,
                            bold: true,
                            margin: [0, 0, 0, 10],
                            alignment: 'center',
                            color: '#007bff'
                        },
                        subheader: {
                            fontSize: 16,
                            bold: true,
                            margin: [0, 0, 0, 5],
                            alignment: 'center'
                        },
                        dateText: {
                            fontSize: 10,
                            italics: true,
                            alignment: 'center',
                            margin: [0, 0, 0, 10],
                            color: '#666'
                        },
                        stats: {
                            fontSize: 12,
                            margin: [0, 10, 0, 10]
                        },
                        chartTitle: {
                            fontSize: 14,
                            bold: true,
                            margin: [0, 10, 0, 5]
                        },
                        tableTitle: {
                            fontSize: 14,
                            bold: true,
                            margin: [0, 10, 0, 10]
                        },
                        tableHeader: {
                            bold: true,
                            fontSize: 11,
                            color: 'white'
                        },
                        footer: {
                            fontSize: 12,
                            italics: true,
                            margin: [0, 10, 0, 5]
                        },
                        footerSmall: {
                            fontSize: 10,
                            color: '#666'
                        }
                    },
                    pageOrientation: 'portrait',
                    pageMargins: [40, 60, 40, 60]
                };

                return docDefinition;
            }

            // PURE JQUERY - Open PDF (no AJAX)
            $('#openPdfBtn').on('click', function() {
                try {
                    pdfMake.createPdf(getPdfDocDef()).open();
                } catch (error) {
                    console.error('Error opening PDF:', error);
                    alert('Error opening PDF: ' + error.message);
                }
            });

            // PURE JQUERY - Print PDF (no AJAX)
            $('#printPdfBtn').on('click', function() {
                try {
                    pdfMake.createPdf(getPdfDocDef()).print();
                } catch (error) {
                    console.error('Error printing PDF:', error);
                    alert('Error printing PDF: ' + error.message);
                }
            });

            // PURE JQUERY - Download PDF (no AJAX)
            $('#downloadPdfBtn').on('click', function() {
                try {
                    var fileName = $.trim($('#reportFileName').val()) || 'BikeStoreReport';
                    pdfMake.createPdf(getPdfDocDef()).download(fileName + '.pdf');
                } catch (error) {
                    console.error('Error downloading PDF:', error);
                    alert('Error downloading PDF: ' + error.message);
                }
            });

            // PURE JQUERY - Save Report form submission (NO AJAX - traditional POST)
            $('#saveReportForm').on('submit', function(e) {
                var fileName = $.trim($('#reportFileName').val()) || 'Report';
                var description = $('#descriptionEditor').summernote('code');

                // Build simple HTML report
                var reportHtml = '<!DOCTYPE html><html><head><title>' + fileName + '</title>';
                reportHtml += '<meta charset="utf-8">';
                reportHtml += '<style>body{font-family:Arial,sans-serif;margin:20px;line-height:1.6;}';
                reportHtml += 'h1{color:#007bff;text-align:center;}';
                reportHtml += 'table{width:100%;border-collapse:collapse;margin-top:20px;}';
                reportHtml += 'th,td{border:1px solid #ddd;padding:10px;text-align:left;}';
                reportHtml += 'th{background:#007bff;color:white;font-weight:bold;}';
                reportHtml += 'tr:nth-child(even){background:#f9f9f9;}';
                reportHtml += '.stats{background:#e9ecef;padding:15px;border-radius:5px;margin:20px 0;}';
                reportHtml += '</style></head><body>';
                reportHtml += '<h1>Bike Store Sales Report</h1>';
                reportHtml += '<p style="text-align:center;color:#666;"><em>Generated: ' + new Date().toLocaleString() + '</em></p>';
                reportHtml += '<div class="stats">';
                reportHtml += '<p><strong>Total Orders (Top 10):</strong> ' + totalOrders + '</p>';
                reportHtml += '<p><strong>Average Orders per Product:</strong> ' + avgOrders + '</p>';
                reportHtml += '</div>';
                reportHtml += '<h2>Top 10 Products</h2>';
                reportHtml += '<table><thead><tr><th>Rank</th><th>Product</th><th>Brand</th><th>Category</th><th>Orders</th></tr></thead><tbody>';

                $.each(reportData, function(index, item) {
                    reportHtml += '<tr>';
                    reportHtml += '<td>' + (index + 1) + '</td>';
                    reportHtml += '<td>' + item.Label + '</td>';
                    reportHtml += '<td>' + item.Brand + '</td>';
                    reportHtml += '<td>' + item.Category + '</td>';
                    reportHtml += '<td>' + item.Value + '</td>';
                    reportHtml += '</tr>';
                });

                reportHtml += '</tbody></table></body></html>';

                // Set hidden inputs for form POST
                $('#reportHtmlInput').val(reportHtml);
                $('#descriptionInput').val(description);

                // Form submits normally - NO AJAX
                return true;
            });

            // PURE JQUERY - View Description (NO AJAX - data preloaded)
            $(document).on('click', '.view-description', function() {
                var fileName = $(this).data('filename');
                var $item = $(this).closest('.archive-item');
                var $descDiv = $item.find('.archive-item-description');

                if ($descDiv.is(':visible')) {
                    $descDiv.slideUp();
                } else {
                    // Get description from preloaded data (NO AJAX)
                    var description = fileDescriptions[fileName] || '';

                    if (description && description.trim() !== '') {
                        $descDiv.html(description).slideDown();
                    } else {
                        $descDiv.html('<em>No description available</em>').slideDown();
                    }
                }
            });
        });
    </script>
}